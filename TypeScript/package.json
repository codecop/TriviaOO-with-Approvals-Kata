{
  "name": "uglytriviaoo-with-approvals-kata",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/codecop/TriviaOO-with-Approvals-Kata"
  },
  "description": "TriviaOO kata in typescript",
  "main": "src/game-runner.ts",
  "scripts": {
    "start": "ts-node src/game-runner.ts",
    "test": "mocha --recursive --require ts-node/register \"tests/**/*.test.ts\"",
    "lint": "tslint \"src/**/*.ts\""
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "text",
      "html"
    ]
  },
  "readmeFilename": "README.md",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "4.1.4",
    "@types/mocha": "5.2.5",
    "@types/node": "10.11.2",
    "approvals": "3.0.5",
    "chai": "4.2.0",
    "mocha": "6.2.2",
    "nyc": "^12.0.2",
    "sinon": "^6.1.3",
    "ts-node": "^7.0.1",
    "tslint": "5.8.0",
    "typescript": "^3.0.3"
  }
}
